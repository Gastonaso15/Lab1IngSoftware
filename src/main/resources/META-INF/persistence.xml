<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="culturartePU">
        <class>culturarte.logica.modelos.Categoria</class>
        <class>culturarte.logica.modelos.Colaboracion</class>
        <class>culturarte.logica.modelos.Colaborador</class>
        <class>culturarte.logica.modelos.EstadoPropuesta</class>
        <class>culturarte.logica.modelos.Proponente</class>
        <class>culturarte.logica.modelos.Propuesta</class>
        <class>culturarte.logica.modelos.PropuestaEstado</class>
        <class>culturarte.logica.modelos.Seguimiento</class>
        <class>culturarte.logica.modelos.TipoRetorno</class>
        <class>culturarte.logica.modelos.Usuario</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/culturarte"/>
            <property name="jakarta.persistence.jdbc.user" value="culturarte"/>
            <property name="jakarta.persistence.jdbc.password" value="culturarte123"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="culturartePU-docker">
        <class>culturarte.logica.modelos.Categoria</class>
        <class>culturarte.logica.modelos.Colaboracion</class>
        <class>culturarte.logica.modelos.Colaborador</class>
        <class>culturarte.logica.modelos.EstadoPropuesta</class>
        <class>culturarte.logica.modelos.Proponente</class>
        <class>culturarte.logica.modelos.Propuesta</class>
        <class>culturarte.logica.modelos.PropuestaEstado</class>
        <class>culturarte.logica.modelos.Seguimiento</class>
        <class>culturarte.logica.modelos.TipoRetorno</class>
        <class>culturarte.logica.modelos.Usuario</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://culturarte_db:3306/culturarte"/>
            <property name="jakarta.persistence.jdbc.user" value="culturarte"/>
            <property name="jakarta.persistence.jdbc.password" value="culturarte123"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>


</persistence>
